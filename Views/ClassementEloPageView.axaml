<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             Foreground="{DynamicResource PrimaryForeground}"
             Background="{DynamicResource PrimaryBackground}"
             xmlns:vm="clr-namespace:Chess_D_B.ViewModels"
             x:DataType="vm:ClassementEloPageViewModel"
             x:Class="Chess_D_B.Views.ClassementEloPageView">
    
    <Grid RowDefinitions="Auto, Auto, Auto, *, Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="ðŸ† Classement ELO des Joueurs" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Statistiques globales -->
        <Border Grid.Row="1" Padding="20" Background="#34495E">
            <Grid ColumnDefinitions="*, *, *, *">
                
                <!-- Nombre de joueurs -->
                <StackPanel Grid.Column="0" 
                            HorizontalAlignment="Center"
                            Spacing="5">
                    <TextBlock Text="ðŸ‘¥ Joueurs" 
                               FontSize="12" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding NombreJoueurs}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- ELO Moyen -->
                <StackPanel Grid.Column="1" 
                            HorizontalAlignment="Center"
                            Spacing="5">
                    <TextBlock Text="ðŸ“Š Moyenne" 
                               FontSize="12" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding EloMoyen}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#3498db"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- ELO Max -->
                <StackPanel Grid.Column="2" 
                            HorizontalAlignment="Center"
                            Spacing="5">
                    <TextBlock Text="â¬†ï¸ Maximum" 
                               FontSize="12" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding EloMax}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#27ae60"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
                <!-- ELO Min -->
                <StackPanel Grid.Column="3" 
                            HorizontalAlignment="Center"
                            Spacing="5">
                    <TextBlock Text="â¬‡ï¸ Minimum" 
                               FontSize="12" 
                               Foreground="White"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding EloMin}" 
                               FontSize="24" 
                               FontWeight="Bold"
                               Foreground="#e74c3c"
                               HorizontalAlignment="Center"/>
                </StackPanel>
                
            </Grid>
        </Border>
        
        <!-- Barre d'outils : Filtres et tri -->
        <Border Grid.Row="2" Padding="20" Background="#34495E">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                
                <!-- Message de statut -->
                <TextBlock Grid.Column="0"
                           Text="{Binding Message}" 
                           FontSize="14"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Margin="0,0,20,0"/>
                
                <!-- Bouton Inverser tri -->
                <Button Grid.Column="2"
                        Content="{Binding TriDecroissant, Converter={x:Static StringConverters.IsNullOrEmpty}}"
                        Command="{Binding InverserTriCommand}"
                        Height="35"
                        MinWidth="120"
                        Margin="0,0,10,0"
                        Background="#2980b9">
                    <Button.Content>
                        <TextBlock>
                            <Run Text="{Binding TriDecroissant, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                            <Run Text="ðŸ”½ Meilleurs d'abord" />
                        </TextBlock>
                    </Button.Content>
                </Button>
                
                <!-- Bouton RafraÃ®chir -->
                <Button Grid.Column="3"
                        Content="ðŸ”„ RafraÃ®chir"
                        Command="{Binding ChargerClassementCommand}"
                        Height="35"
                        MinWidth="120"
                        IsEnabled="{Binding !EstEnChargement}"/>
                
            </Grid>
        </Border>
        
        <!-- Liste du classement -->
        <ScrollViewer Grid.Row="3" Margin="20">
            <StackPanel Spacing="10">
                
                <!-- En-tÃªte du tableau -->
                <Border Background="#2C3E50" 
                        BorderBrush="#34495E" 
                        BorderThickness="2" 
                        CornerRadius="5,5,0,0"
                        Padding="15,10">
                    <Grid ColumnDefinitions="Auto,2*,2*,1.5*,1*,1.5*">
                        <TextBlock Grid.Column="0" 
                                   Text="Rang" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"
                                   Width="70"/>
                        <TextBlock Grid.Column="1" 
                                   Text="PrÃ©nom" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock Grid.Column="2" 
                                   Text="Nom" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock Grid.Column="3" 
                                   Text="Date de naissance" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"/>
                        <TextBlock Grid.Column="4" 
                                   Text="ELO" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                        <TextBlock Grid.Column="5" 
                                   Text="CrÃ©Ã© le" 
                                   FontWeight="Bold" 
                                   FontSize="16"
                                   Foreground="White"/>
                    </Grid>
                </Border>
                
                <!-- Liste du classement -->
                <ListBox ItemsSource="{Binding Classement}"
                         Background="Transparent"
                         BorderBrush="#34495E"
                         BorderThickness="2,0,2,2"
                         CornerRadius="0,0,5,5">
                    
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="15,10" 
                                    BorderBrush="#2C3E50" 
                                    BorderThickness="0,0,0,1">
                                <!-- Background dynamique selon le rang -->
                                <Border.Background>
                                    <SolidColorBrush Color="#34495E" Opacity="{Binding Rang, Converter={x:Static StringConverters.IsNullOrEmpty}}"/>
                                </Border.Background>
                                
                                <Grid ColumnDefinitions="Auto,2*,2*,1.5*,1*,1.5*">
                                    
                                    <!-- Rang avec mÃ©daille -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding Medaille}" 
                                               VerticalAlignment="Center"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{Binding CouleurRang}"
                                               Width="70"
                                               TextAlignment="Center"/>
                                    
                                    <!-- PrÃ©nom -->
                                    <TextBlock Grid.Column="1" 
                                               Text="{Binding Joueur.Prenom}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    
                                    <!-- Nom -->
                                    <TextBlock Grid.Column="2" 
                                               Text="{Binding Joueur.Nom}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    
                                    <!-- Date de naissance -->
                                    <TextBlock Grid.Column="3" 
                                               Text="{Binding Joueur.DateNaissance, StringFormat='dd/MM/yyyy'}" 
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                    
                                    <!-- ELO avec badge colorÃ© -->
                                    <Border Grid.Column="4"
                                            Background="#3498db"
                                            CornerRadius="12"
                                            Padding="10,5"
                                            HorizontalAlignment="Center">
                                        <TextBlock Text="{Binding Joueur.Elo}" 
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"/>
                                    </Border>
                                    
                                    <!-- Date de crÃ©ation -->
                                    <TextBlock Grid.Column="5" 
                                               Text="{Binding Joueur.DateCreation, StringFormat='dd/MM/yyyy HH:mm'}" 
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="#95a5a6"/>
                                    
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                    
                    <!-- Style pour enlever la sÃ©lection visuelle -->
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                            <Setter Property="Background" Value="#8e44ad"/>
                        </Style>
                    </ListBox.Styles>
                    
                </ListBox>
                
            </StackPanel>
        </ScrollViewer>
        
        <!-- Footer avec bouton retour et indicateur de chargement -->
        <StackPanel Grid.Row="4" Margin="20" Spacing="10">
            
            <!-- Barre de progression -->
            <ProgressBar IsIndeterminate="True" 
                         IsVisible="{Binding EstEnChargement}"
                         Height="4"/>
            
            <!-- Bouton Retour -->
            <Button Content="â† Retour au menu" 
                    Command="{Binding RetourCommand}"
                    HorizontalAlignment="Left"
                    Width="200"
                    Height="40"/>
            
        </StackPanel>
        
    </Grid>
</UserControl>