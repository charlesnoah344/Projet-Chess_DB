<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             Foreground="{DynamicResource PrimaryForeground}"
             Background="{DynamicResource PrimaryBackground}"
             xmlns:vm="clr-namespace:Chess_D_B.ViewModels"
             x:DataType="vm:SupprimerJoueurPageViewModel"
             x:Class="Chess_D_B.Views.SupprimerJoueurPageView">
    
    <Grid RowDefinitions="Auto, Auto, *, Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="ðŸ—‘ï¸ Supprimer un Joueur" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Barre d'outils et message -->
        <Border Grid.Row="1" Padding="20" Background="#34495E">
            <StackPanel Spacing="10">
                <!-- Message de statut -->
                <TextBlock Text="{Binding Message}" 
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- Recherche par ID -->
                <Grid ColumnDefinitions="*, Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding IdRecherche}"
                             Watermark="Entrez l'ID du joueur Ã  supprimer..."
                             Height="40"
                             Background="#333B5A"
                             Margin="0,0,10,0"
                             IsEnabled="{Binding !EstEnChargement}"/>
                    
                    <Button Grid.Column="1"
                            Content="ðŸ” Rechercher"
                            Command="{Binding RechercherParIdCommand}"
                            Height="40"
                            MinWidth="120"
                            Background="#2980b9"
                            Foreground="White"
                            IsEnabled="{Binding !EstEnChargement}"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="2">
            <Grid ColumnDefinitions="*, *" Margin="20" ColumnSpacing="20">
                
                <!-- Colonne gauche : Liste de tous les joueurs -->
                <Border Grid.Column="0" 
                        BorderBrush="#34495E" 
                        BorderThickness="2" 
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel Spacing="10">
                        
                        <TextBlock Text="ðŸ“‹ Tous les joueurs" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        
                        <TextBlock Text="Cliquez sur un joueur pour le sÃ©lectionner" 
                                   FontSize="12" 
                                   Foreground="#95a5a6"
                                   TextWrapping="Wrap"/>
                        
                        <!-- Liste des joueurs -->
                        <ListBox ItemsSource="{Binding Joueurs}"
                                 SelectedItem="{Binding JoueurSelectionne, Mode=TwoWay}"
                                 SelectionMode="Single"
                                 Height="400"
                                 Background="#2C3E50"
                                 BorderBrush="#34495E"
                                 BorderThickness="1">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" 
                                            BorderBrush="#34495E" 
                                            BorderThickness="0,0,0,1">
                                        <StackPanel Spacing="5">
                                            <TextBlock>
                                                <Run Text="{Binding Prenom}" FontWeight="Bold"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding Nom}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding DateNaissance, StringFormat='NÃ©(e) le : dd/MM/yyyy'}" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a6"/>
                                            <TextBlock Text="{Binding Elo, StringFormat='ELO : {0}'}" 
                                                       FontSize="11" 
                                                       Foreground="#3498db"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            
                        </ListBox>
                        
                        <!-- Bouton RafraÃ®chir -->
                        <Button Content="ðŸ”„ RafraÃ®chir la liste"
                                Command="{Binding ChargerJoueursCommand}"
                                HorizontalAlignment="Stretch"
                                Height="35"
                                IsEnabled="{Binding !EstEnChargement}"/>
                        
                    </StackPanel>
                </Border>
                
                <!-- Colonne droite : Informations du joueur sÃ©lectionnÃ© -->
                <Border Grid.Column="1" 
                        BorderBrush="#34495E" 
                        BorderThickness="2" 
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel Spacing="15">
                        
                        <TextBlock Text="ðŸ‘¤ Joueur sÃ©lectionnÃ©" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        
                        <!-- Message si aucun joueur sÃ©lectionnÃ© -->
                        <StackPanel Spacing="20"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,50,0,0"
                                    IsVisible="{Binding !JoueurEstSelectionne}">
                            <TextBlock Text="ðŸ‘ˆ" 
                                       FontSize="48" 
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="SÃ©lectionnez un joueur&#x0a;dans la liste"
                                       FontSize="16"
                                       Foreground="#95a5a6"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"/>
                        </StackPanel>
                        
                        <!-- Affichage des dÃ©tails du joueur sÃ©lectionnÃ© -->
                        <StackPanel Spacing="10" 
                                    IsVisible="{Binding JoueurEstSelectionne, FallbackValue=False}">
                            
                            <!-- PrÃ©nom -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="PrÃ©nom" FontWeight="Bold" FontSize="12" Foreground="#95a5a6"/>
                                <TextBlock Text="{Binding JoueurSelectionne.Prenom}" FontSize="16"/>
                            </StackPanel>
                            
                            <!-- Nom -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="Nom" FontWeight="Bold" FontSize="12" Foreground="#95a5a6"/>
                                <TextBlock Text="{Binding JoueurSelectionne.Nom}" FontSize="16"/>
                            </StackPanel>
                            
                            <!-- Date de naissance -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="Date de naissance" FontWeight="Bold" FontSize="12" Foreground="#95a5a6"/>
                                <TextBlock Text="{Binding JoueurSelectionne.DateNaissance, StringFormat='dd/MM/yyyy'}" FontSize="16"/>
                            </StackPanel>
                            
                            <!-- ELO -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="ELO" FontWeight="Bold" FontSize="12" Foreground="#95a5a6"/>
                                <TextBlock Text="{Binding JoueurSelectionne.Elo}" FontSize="16" Foreground="#3498db"/>
                            </StackPanel>
                            
                            <!-- ID -->
                            <StackPanel Spacing="5">
                                <TextBlock Text="ID" FontWeight="Bold" FontSize="12" Foreground="#95a5a6"/>
                                <TextBlock Text="{Binding JoueurSelectionne.Id}" 
                                           FontSize="11" 
                                           Foreground="#95a5a6"
                                           FontFamily="Consolas"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Zone de confirmation -->
                            <Border Background="#34495E" 
                                    Padding="15" 
                                    CornerRadius="5"
                                    Margin="0,20,0,0"
                                    IsVisible="{Binding ConfirmationVisible}">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="âš ï¸ Confirmation requise" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="White"
                                               HorizontalAlignment="Center"/>
                                    
                                    <TextBlock Text="Cette action est irrÃ©versible !" 
                                               FontSize="12" 
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    
                                    <Grid ColumnDefinitions="*, *" ColumnSpacing="10" Margin="0,10,0,0">
                                        <Button Grid.Column="0"
                                                Content="âŒ Annuler"
                                                Command="{Binding AnnulerSuppressionCommand}"
                                                HorizontalAlignment="Stretch"
                                                Background="#7f8c8d"/>
                                        
                                        <Button Grid.Column="1"
                                                Content="âœ“ Confirmer"
                                                Command="{Binding ConfirmerSuppressionCommand}"
                                                HorizontalAlignment="Stretch"
                                                Background="#27ae60"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            
                            <!-- Bouton Supprimer -->
                            <Button Content="ðŸ—‘ï¸ Supprimer ce joueur"
                                    Command="{Binding DemanderConfirmationCommand}"
                                    HorizontalAlignment="Stretch"
                                    Height="45"
                                    Background="#34495E"
                                    Foreground="White"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Margin="0,20,0,0"
                                    IsEnabled="{Binding !EstEnChargement}"
                                    IsVisible="{Binding !ConfirmationVisible}"/>
                            
                        </StackPanel>
                        
                    </StackPanel>
                </Border>
                
            </Grid>
        </ScrollViewer>
        
        <!-- Footer avec bouton retour et indicateur de chargement -->
        <StackPanel Grid.Row="3" Margin="20" Spacing="10">
            
            <!-- Barre de progression -->
            <ProgressBar IsIndeterminate="True" 
                         IsVisible="{Binding EstEnChargement}"
                         Height="4"/>
            
            <!-- Bouton Retour -->
            <Button Content="â† Retour au menu" 
                    Command="{Binding RetourCommand}"
                    HorizontalAlignment="Left"
                    Width="200"
                    Height="40"/>
            
        </StackPanel>
        
    </Grid>
</UserControl>