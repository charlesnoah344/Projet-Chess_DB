<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             Foreground="{DynamicResource PrimaryForeground}"
             Background="{DynamicResource PrimaryBackground}"
             xmlns:vm="clr-namespace:Chess_D_B.ViewModels"
             x:DataType="vm:ModifierCompetitionPageViewModel"
             x:Class="Chess_D_B.Views.ModifierCompetitionPageView">
    
    <Grid RowDefinitions="Auto, Auto, *, Auto">
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="âœï¸ Modifier une competition" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Barre d'outils et message -->
        <Border Grid.Row="1" Padding="20" Background="#34495E">
            <StackPanel Spacing="10">
                <!-- Message de statut -->
                <TextBlock Text="{Binding Message}" 
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>
                
                <!-- Recherche par ID -->
                <Grid ColumnDefinitions="*, Auto">
                    <TextBox Grid.Column="0"
                             Text="{Binding IdRecherche}"
                             Watermark="Entrez l'ID du competition Ã  modifier..."
                             Height="40"
                             Background="#333B5A"
                             Margin="0,0,10,0"
                             IsEnabled="{Binding !EstEnChargement}"/>
                    
                    <Button Grid.Column="1"
                            Content="ðŸ” Rechercher"
                            Command="{Binding RechercherParIdCommand}"
                            Height="40"
                            MinWidth="120"
                            Background="#2980b9"
                            Foreground="White"
                            IsEnabled="{Binding !EstEnChargement}"/>
                </Grid>
            </StackPanel>
        </Border>
        
        <!-- Contenu principal -->
        <ScrollViewer Grid.Row="2">
            <Grid ColumnDefinitions="*, 1.5*" Margin="20" ColumnSpacing="20">
                
                <!-- Colonne gauche : Liste de tous les competitions -->
                <Border Grid.Column="0" 
                        BorderBrush="#34495E" 
                        BorderThickness="2" 
                        CornerRadius="5"
                        Padding="15">
                    <StackPanel Spacing="10">
                        
                        <TextBlock Text="ðŸ“‹ SÃ©lectionner une competiton" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        
                        <TextBlock Text="Cliquez sur une competition pour le modifier" 
                                   FontSize="12" 
                                   Foreground="#95a5a6"
                                   TextWrapping="Wrap"/>
                        
                        <!-- Liste des competitions -->
                        <ListBox ItemsSource="{Binding Competitions}"
                                 SelectedItem="{Binding CompetitionSelectionne}"
                                 Height="400"
                                 Background="#2C3E50"
                                 BorderBrush="#34495E"
                                 BorderThickness="1">
                            
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Padding="10" 
                                            BorderBrush="#34495E" 
                                            BorderThickness="0,0,0,1">
                                        <StackPanel Spacing="5">
                                            <TextBlock>
                                                <Run Text="{Binding Tournoi}" FontWeight="Bold"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding Ville}" FontWeight="Bold"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding DateDebut, StringFormat='DÃ©but : dd/MM/yyyy'}" 
                                                       FontSize="11" 
                                                       Foreground="#95a5a6"/>
                                            <TextBlock Text="{Binding DateFin, StringFormat='Fin : dd/MM/yyyy'}" 
                                                       FontSize="11" 
                                                       Foreground="#3498db"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            
                        </ListBox>
                        
                        <!-- Bouton RafraÃ®chir -->
                        <Button Content="ðŸ”„ RafraÃ®chir la liste"
                                Command="{Binding ChargerCompetitionsCommand}"
                                HorizontalAlignment="Stretch"
                                Height="35"
                                IsEnabled="{Binding !EstEnChargement}"/>
                        
                    </StackPanel>
                </Border>
                
                <!-- Colonne droite : Formulaire de modification -->
                <Border Grid.Column="1" 
                        BorderBrush="#34495E" 
                        BorderThickness="2" 
                        CornerRadius="5"
                        Padding="15">
                    <ScrollViewer>
                        <StackPanel Spacing="15">
                            
                            <TextBlock Text="ðŸ“ Formulaire de modification" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="White"/>
                            
                            <!-- Message si aucune competition sÃ©lectionnÃ© -->
                            <StackPanel Spacing="20"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Margin="0,50,0,0"
                                        IsVisible="{Binding !CompetitionEstSelectionne}">
                                <TextBlock Text="ðŸ‘ˆ" 
                                           FontSize="48" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="SÃ©lectionnez une competition&#x0a;dans la liste"
                                           FontSize="16"
                                           Foreground="#95a5a6"
                                           HorizontalAlignment="Center"
                                           TextAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- Formulaire de modification -->
                            <StackPanel Spacing="15" 
                                        IsVisible="{Binding CompetitionEstSelectionne}">
                                
                                <!-- Nom -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Nom *" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Tournoi}" 
                                             Watermark="Entrez le nom..." 
                                             Background="#333B5A" 
                                             Height="40"
                                             IsEnabled="{Binding !EstEnChargement}"/>
                                </StackPanel>
                                
                                <!-- PrÃ©nom -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="PrÃ©nom *" FontWeight="Bold" FontSize="14"/>
                                    <TextBox Text="{Binding Ville}" 
                                             Watermark="Entrez le prÃ©nom..." 
                                             Background="#333B5A" 
                                             Height="40"
                                             IsEnabled="{Binding !EstEnChargement}"/>
                                </StackPanel>
                                
                                <!-- Date de naissance -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Date de naissance *" FontWeight="Bold" FontSize="14"/>
                                    <DatePicker SelectedDate="{Binding DateDebut}" 
                                                Height="40" 
                                                Background="#333B5A"
                                                IsEnabled="{Binding !EstEnChargement}"/>
                                </StackPanel>
                                
                                <!-- Date de naissance -->
                                <StackPanel Spacing="8">
                                    <TextBlock Text="Date de naissance *" FontWeight="Bold" FontSize="14"/>
                                    <DatePicker SelectedDate="{Binding DateFin}" 
                                                Height="40" 
                                                Background="#333B5A"
                                                IsEnabled="{Binding !EstEnChargement}"/>
                                </StackPanel>
                                
                                <!-- Informations de competition original -->
                                <Border Background="#34495E" 
                                        Padding="10" 
                                        CornerRadius="5"
                                        Margin="0,10,0,0">
                                    <StackPanel Spacing="5">
                                        <TextBlock Text="â„¹ï¸ Informations de la competition" 
                                                   FontSize="12" 
                                                   FontWeight="Bold"
                                                   Foreground="#95a5a6"/>
                                        <TextBlock Text="{Binding CompetitionSelectionne.Id, StringFormat='ID : {0}'}" 
                                                   FontSize="10" 
                                                   Foreground="#95a5a6"
                                                   FontFamily="Consolas"
                                                   TextWrapping="Wrap"/>
                                        
                                    </StackPanel>
                                </Border>
                                
                                <!-- Boutons d'action -->
                                <Grid ColumnDefinitions="*, *" 
                                      Margin="0,20,0,0" 
                                      ColumnSpacing="10">
                                    
                                    <!-- Bouton Annuler -->
                                    <Button Grid.Column="0"
                                            Content="âŒ Annuler"
                                            Command="{Binding AnnulerModificationCommand}"
                                            HorizontalAlignment="Stretch"
                                            Height="45"
                                            Background="#7f8c8d"
                                            Foreground="White"
                                            IsEnabled="{Binding !EstEnChargement}"/>
                                    
                                    <!-- Bouton Enregistrer -->
                                    <Button Grid.Column="1"
                                            Content="ðŸ’¾ Enregistrer"
                                            Command="{Binding EnregistrerModificationsCommand}"
                                            HorizontalAlignment="Stretch"
                                            Height="45"
                                            Background="#27ae60"
                                            Foreground="White"
                                            FontWeight="Bold"
                                            IsEnabled="{Binding !EstEnChargement}"/>
                                    
                                </Grid>
                                
                            </StackPanel>
                            
                        </StackPanel>
                    </ScrollViewer>
                </Border>
                
            </Grid>
        </ScrollViewer>
        
        <!-- Footer avec bouton retour et indicateur de chargement -->
        <StackPanel Grid.Row="3" Margin="20" Spacing="10">
            
            <!-- Barre de progression -->
            <ProgressBar IsIndeterminate="True" 
                         IsVisible="{Binding EstEnChargement}"
                         Height="4"/>
            
            <!-- Bouton Retour -->
            <Button Content="â† Retour au menu" 
                    Command="{Binding RetourCommand}"
                    HorizontalAlignment="Left"
                    Width="200"
                    Height="40"/>
            
        </StackPanel>
        
    </Grid>
</UserControl>