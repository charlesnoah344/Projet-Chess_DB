<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Foreground="{DynamicResource PrimaryForeground}"
             Background="{DynamicResource PrimaryBackground}"
             xmlns:vm="clr-namespace:Chess_D_B.ViewModels"
             x:DataType="vm:CreateCompetitionPageViewModel"
             x:Class="Chess_D_B.Views.CreateCompetitionPageView">
    
    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text=" Nouveau Tournoi" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Contenu -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="40" Spacing="20" MaxWidth="600">
                
                <!-- Nom -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Nom du Tournoi" FontWeight="Bold" FontSize="14"/>
                    <TextBox Text="{Binding Tournoi}"
                             Watermark="Entrez le nom..." Height="40"
                             Background="#34495E" 
                             IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                             
                </StackPanel>
                

                
                
                <!-- Ville -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Ville" FontWeight="Bold" FontSize="14"/>
                    <TextBox Text="{Binding Ville}"
                             Watermark="Entrez le nom de la ville..." Height="40"
                             Background="#34495E" 
                             IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- Date de debut -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Date de debut" FontWeight="Bold" FontSize="14"/>
                    <DatePicker SelectedDate="{Binding DateDebut}"
                                Height="40"
                                Background="#34495E"
                                IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- Date de fin -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Date de fin" FontWeight="Bold" FontSize="14"/>
                    <DatePicker SelectedDate="{Binding DateFin}"
                                Height="40"
                                Background="#34495E"
                                IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- Boutons -->
                <Grid ColumnDefinitions="*, *" Margin="0,20,0,0">
                    <Button Grid.Column="0" 
                            Content="← Retour" 
                            Command="{Binding RetourCommand}"
                            Height="45"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Stretch"/>
                    
                    <Button Grid.Column="1" 
                            Content="✓ Enregistrer" 
                            Command="{Binding EnregistrerCommand}"
                            Height="45"
                            Margin="10,0,0,0"
                            Classes="menu"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                            
                </Grid>
                <!-- Indicateur de chargement -->
                <ProgressBar IsIndeterminate="True" 
                             IsVisible="{Binding EstEnCoursEnregistrement}"
                             Height="4"
                             Margin="0,10,0,0"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>