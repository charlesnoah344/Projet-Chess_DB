<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             Foreground="{DynamicResource PrimaryForeground}"
             Background="{DynamicResource PrimaryBackground}"
             xmlns:vm="clr-namespace:Chess_D_B.ViewModels"
             x:DataType="vm:AjouterJoueurPageViewModel"
             x:Class="Chess_D_B.Views.AjouterJoueurPageView">
    
    <Grid RowDefinitions="Auto, *">
        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20">
            <TextBlock Text="ðŸŽ¯ Ajouter un Nouveau Joueur" 
                       FontSize="28" 
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Contenu -->
        <ScrollViewer Grid.Row="1">
            <StackPanel Margin="40" Spacing="20" MaxWidth="600">
                
                <!-- Message de retour (succÃ¨s ou erreur) -->
                <TextBlock Text="{Binding MessageRetour}" 
                           FontSize="16"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           IsVisible="{Binding MessageRetour, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"/>
                
                <!-- Nom -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Nom du joueur *" FontWeight="Bold" FontSize="14"/>
                    <!-- Binding en mode TwoWay : les changements dans le TextBox modifient la propriÃ©tÃ© Nom du ViewModel -->
                    <TextBox Text="{Binding Nom}" 
                             Watermark="Entrez le nom..." 
                             Background="#34495E" 
                             Height="40"
                             IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- PrÃ©nom -->
                <StackPanel Spacing="8">
                    <TextBlock Text="PrÃ©nom du joueur *" FontWeight="Bold" FontSize="14"/>
                    <TextBox Text="{Binding Prenom}" 
                             Watermark="Entrez le prÃ©nom..." 
                             Background="#34495E" 
                             Height="40"
                             IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- Date de naissance -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Date de naissance *" FontWeight="Bold" FontSize="14"/>
                    <!-- Le DatePicker se lie Ã  la propriÃ©tÃ© DateNaissance -->
                    <DatePicker SelectedDate="{Binding DateNaissance}" 
                                Height="40" 
                                Background="#34495E"
                                IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- ELO Initial -->
                <StackPanel Spacing="8">
                    <TextBlock Text="ELO Initial *" FontWeight="Bold" FontSize="14"/>
                    <!-- NumericUpDown permet de saisir un nombre avec des boutons +/- -->
                    <NumericUpDown Value="{Binding Elo}" 
                                   Minimum="0" 
                                   Maximum="3000" 
                                   Background="#34495E" 
                                   Height="40"
                                   IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </StackPanel>
                
                <!-- Boutons -->
                <Grid ColumnDefinitions="*, *" Margin="0,20,0,0">
                    <!-- Bouton Retour : appelle la commande RetourCommand -->
                    <Button Grid.Column="0" 
                            Content="â† Retour" 
                            Command="{Binding RetourCommand}"
                            Height="45"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                    
                    <!-- Bouton Enregistrer : appelle la commande EnregistrerCommand (async) -->
                    <Button Grid.Column="1" 
                            Content="âœ“ Enregistrer" 
                            Command="{Binding EnregistrerCommand}"
                            Height="45"
                            Margin="10,0,0,0"
                            Classes="menu"
                            HorizontalAlignment="Stretch"
                            IsEnabled="{Binding !EstEnCoursEnregistrement}"/>
                </Grid>
                
                <!-- Indicateur de chargement -->
                <ProgressBar IsIndeterminate="True" 
                             IsVisible="{Binding EstEnCoursEnregistrement}"
                             Height="4"
                             Margin="0,10,0,0"/>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>